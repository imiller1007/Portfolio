</body>


<script>

    particlesJS.load('particles-js', '/particlesjs-config.json', function(){
        console.log('particles.json for JS logo loaded!');
    });

    particlesJS.load('particles-jsphp', '/particlesjs-config-php.json', function(){
        console.log('particles.json for PHP logo loaded!');
    });

    particlesJS.load('particles-jsmysql', '/particlesjs-config-mysql.json', function(){
        console.log('particles.json for MySQL logo loaded!');
    });


    function IntroAnimation() {
        setTimeout(function () { $("#about-link").fadeTo(3000, 1) }, 1000);
        setTimeout(function () { $("#work-link").fadeTo(3000, 1) }, 1300);
        setTimeout(function () { $("#contact-link").fadeTo(3000, 1) }, 1600);
        $("#logo").fadeTo(2000, 1);
    }

    $(document).ready(function () {

        IntroAnimation();

        $("a").on('click', function (event) {
            if (this.hash !== "") {
                event.preventDefault();
                var hash = this.hash;
                $('html, body').animate({
                    scrollTop: $(hash).offset().top
                }, 800, function () {
                    window.location.hash = hash;
                });
            }
        });

        var clipboard = new ClipboardJS('.btn');
        clipboard.on('success', function(e) {
            console.log(e);
            $(".btn").text("Copied to clipboard");
            $(".btn").css( "text-decoration", "none");
            setTimeout(function(){ $(".btn").text("contact.ianmiller@gmail.com") }, 2000);
            setTimeout(function(){ $(".btn").css( "text-decoration", "underline") }, 2000);
        });
        clipboard.on('error', function(e) {
            console.log(e);
        });

    });

    // document.querySelector(".card-flip").classList.toggle("flip");

</script>

</html>